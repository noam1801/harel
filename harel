-- יצירת GUI
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local SpeedButton = Instance.new("TextButton")
local ResetButton = Instance.new("TextButton")

-- הכנסת ה-Gui לשחקן
ScreenGui.Parent = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- עיצוב התיבה
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.Position = UDim2.new(0.35, 0, 0.35, 0)
Frame.Size = UDim2.new(0, 300, 0, 180)

-- כפתור מהירות
SpeedButton.Parent = Frame
SpeedButton.BackgroundColor3 = Color3.fromRGB(70, 70, 150)
SpeedButton.Position = UDim2.new(0.1, 0, 0.2, 0)
SpeedButton.Size = UDim2.new(0, 240, 0, 40)
SpeedButton.Text = "הפוך אותי למהיר (WalkSpeed 100)"

-- כפתור החזרה למהירות רגילה
ResetButton.Parent = Frame
ResetButton.BackgroundColor3 = Color3.fromRGB(150, 70, 70)
ResetButton.Position = UDim2.new(0.1, 0, 0.55, 0)
ResetButton.Size = UDim2.new(0, 240, 0, 40)
ResetButton.Text = "החזר למהירות רגילה (WalkSpeed 16)"

-- פונקציות ללחיצה
SpeedButton.MouseButton1Click:Connect(function()
    local player = game:GetService("Players").LocalPlayer
    if player.Character and player.Character:FindFirstChildOfClass("Humanoid") then
        player.Character:FindFirstChildOfClass("Humanoid").WalkSpeed = 100
        print("מהירות שונתה ל-100")
    end
end)

ResetButton.MouseButton1Click:Connect(function()
    local player = game:GetService("Players").LocalPlayer
    if player.Character and player.Character:FindFirstChildOfClass("Humanoid") then
        player.Character:FindFirstChildOfClass("Humanoid").WalkSpeed = 16
        print("מהירות שונתה חזרה ל-16")
    end
end)
