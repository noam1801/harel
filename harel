-- 注转 住驻专转 Rayfield
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- 爪专转  专砖
local Window = Rayfield:CreateWindow({
    Name = " My Custom Menu",
    LoadingTitle = "注 转驻专...",
    LoadingSubtitle = "  注专",
    Theme = "Ocean", -- 驻砖专 砖转: Default, Amethyst, Bloom, DarkBlue, Green, Light, Ocean, Serenity
    DisableRayfieldPrompts = false,
    DisableBuildWarnings = false,
    ConfigurationSaving = {
        Enabled = false,
        FolderName = nil,
        FileName = "MyMenuConfig"
    }
})

-- 爪专转  转注
local MovementTab = Window:CreateTab("Movement", "compass") -- 拽 Lucide

-- 爪专转 住拽砖
local MovementSection = MovementTab:CreateSection("Adjust Movement")

-- 住专 专转 
local SpeedSlider = MovementTab:CreateSlider({
    Name = "WalkSpeed",
    Range = {0, 300}, -- 专转 拽住转
    Increment = 1,
    Suffix = "Stud/s",
    CurrentValue = 16,
    Flag = "WalkSpeedFlag",
    Callback = function(Value)
        local plr = game.Players.LocalPlayer
        local hum = plr.Character and plr.Character:FindFirstChildOfClass("Humanoid")
        if hum then hum.WalkSpeed = Value end
    end,
})

-- 住专  拽驻爪
local JumpSlider = MovementTab:CreateSlider({
    Name = "JumpPower",
    Range = {0, 400}, -- 拽住  拽驻爪
    Increment = 1,
    Suffix = "",
    CurrentValue = 50,
    Flag = "JumpPowerFlag",
    Callback = function(Value)
        local plr = game.Players.LocalPlayer
        local hum = plr.Character and plr.Character:FindFirstChildOfClass("Humanoid")
        if hum then hum.JumpPower = Value end
    end,
})
