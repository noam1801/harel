-- טעינת ספריית Rayfield
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- יצירת חלון ראשי
local Window = Rayfield:CreateWindow({
    Name = "🚀 My Custom Menu",
    LoadingTitle = "טוען תפריט...",
    LoadingSubtitle = "נבנה במיוחד עבורך",
    Theme = "Ocean", -- אפשר לשנות: Default, Amethyst, Bloom, DarkBlue, Green, Light, Ocean, Serenity
    DisableRayfieldPrompts = false,
    DisableBuildWarnings = false,
    ConfigurationSaving = {
        Enabled = false,
        FolderName = nil,
        FileName = "MyMenuConfig"
    }
})

-- יצירת טאב תנועה
local MovementTab = Window:CreateTab("Movement", "compass") -- אייקון Lucide

-- יצירת סקשן
local MovementSection = MovementTab:CreateSection("Adjust Movement")

-- סליידר למהירות הליכה
local SpeedSlider = MovementTab:CreateSlider({
    Name = "WalkSpeed",
    Range = {0, 300}, -- המהירות המקסימלית
    Increment = 1,
    Suffix = "Stud/s",
    CurrentValue = 16,
    Flag = "WalkSpeedFlag",
    Callback = function(Value)
        local plr = game.Players.LocalPlayer
        local hum = plr.Character and plr.Character:FindFirstChildOfClass("Humanoid")
        if hum then hum.WalkSpeed = Value end
    end,
})

-- סליידר לגובה קפיצה
local JumpSlider = MovementTab:CreateSlider({
    Name = "JumpPower",
    Range = {0, 400}, -- מקסימום גובה קפיצה
    Increment = 1,
    Suffix = "",
    CurrentValue = 50,
    Flag = "JumpPowerFlag",
    Callback = function(Value)
        local plr = game.Players.LocalPlayer
        local hum = plr.Character and plr.Character:FindFirstChildOfClass("Humanoid")
        if hum then hum.JumpPower = Value end
    end,
})
