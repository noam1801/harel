-- יצירת GUI
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local SpeedBox = Instance.new("TextBox")
local ApplyButton = Instance.new("TextButton")

local UserInputSpeed = 16 -- ברירת מחדל

-- הכנסת ה-Gui לשחקן
ScreenGui.Parent = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- עיצוב מסגרת התפריט
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Frame.BorderSizePixel = 0
Frame.Position = UDim2.new(0.75, 0, 0.3, 0)
Frame.Size = UDim2.new(0, 220, 0, 160)

-- כותרת
Title.Parent = Frame
Title.BackgroundTransparency = 1
Title.Size = UDim2.new(1, 0, 0.2, 0)
Title.Font = Enum.Font.GothamBold
Title.Text = "🚀 בורר מהירות"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 18

-- תיבת קלט למהירות
SpeedBox.Parent = Frame
SpeedBox.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
SpeedBox.BorderSizePixel = 0
SpeedBox.Position = UDim2.new(0.1, 0, 0.35, 0)
SpeedBox.Size = UDim2.new(0.8, 0, 0.25, 0)
SpeedBox.Font = Enum.Font.Gotham
SpeedBox.Text = "הכנס מהירות..."
SpeedBox.TextColor3 = Color3.fromRGB(200, 200, 200)
SpeedBox.TextSize = 16
SpeedBox.ClearTextOnFocus = true

-- כפתור הפעלה
ApplyButton.Parent = Frame
ApplyButton.BackgroundColor3 = Color3.fromRGB(70, 130, 180)
ApplyButton.BorderSizePixel = 0
ApplyButton.Position = UDim2.new(0.1, 0, 0.7, 0)
ApplyButton.Size = UDim2.new(0.8, 0, 0.2, 0)
ApplyButton.Font = Enum.Font.GothamBold
ApplyButton.Text = "החל"
ApplyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ApplyButton.TextSize = 16

-- פונקציה לשינוי מהירות
ApplyButton.MouseButton1Click:Connect(function()
    local speed = tonumber(SpeedBox.Text)
    if speed then
        UserInputSpeed = speed
        print("✔ המהירות שונתה ל-" .. speed)
    else
        print("❌ לא הכנסת מספר תקין")
    end
end)

-- לולאה שמוודאת שהמהירות נשארת
game:GetService("RunService").Stepped:Connect(function()
    local player = game:GetService("Players").LocalPlayer
    if player.Character and player.Character:FindFirstChildOfClass("Humanoid") then
        player.Character:FindFirstChildOfClass("Humanoid").WalkSpeed = UserInputSpeed
    end
end)
